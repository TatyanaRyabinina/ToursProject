@model ToursProject.Models.TourModel
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "EditTourForm" }))
{
	<div id="errorEditForm">
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<div class="col-md-10">
				@Html.HiddenFor(model => model.OrderedTourId, new { htmlAttributes = new { @class = "form-control" } })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker", onclick = "tourproject.tourPage.toggleDateTime(this.form)", data_type = "date", data_val_valid = " Dates must be shown in next format – “MM/DD/YYYY”." } })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.ExcursionName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ExcursionName, new { htmlAttributes = new { @class = "form-control formExcursions", data_editorfor = "#formExcursionId", data_type = "excursionname" } })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.ClientName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control formClients", data_editorfor = "#formClientId", data_type = "clientname", data_val_valid = "The field should contain First name and Last name" } })
			</div>
		</div>
		<div>
			<label class="control-label col-md-2">Excursion Sight</label>
			<div class="col-md-10">
				<ul class="excursionSight" name="ExcursionSight">
					@for (int i = 0; i < Model.ExcursionSight.Count; i++)
					{   
						<li class="excursionSightEle">
							@Html.DisplayTextFor(model => model.ExcursionSight[i])
							<input type="button" value="Remove" onclick="tourproject.tourPage.removeExcursionSight()" />
						</li>
					}
				</ul>
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Add Excursion Sight</label>
			<div class="col-md-10">
				<input class="form-control text-box addExcursionSight" data-val="true" type="text" value="" autocomplete="off">
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="button" value="Edit" onclick="tourproject.tourPage.submitEditTourForm(this.form)" class="btn btn-default" />
			</div>
		</div>
	</div>
}